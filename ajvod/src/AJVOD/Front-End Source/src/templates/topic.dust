{>"layouts/page"/}

{! script overrides !}
{<scripts}
  <script src="scripts/page-topic.js"></script>
{/scripts}

{! style overrides !}
{<styles}
  <link rel="stylesheet" href="styles/topic.css">
{/styles}

{! main content !}
{<main}
  <div id="main" data-carousel-id="1">
    <div class="top">
      <div class="h-content">
        <h1>Topic lorem ipsum dolor</h1>
        <p class="desc">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irured.</p>
        {>"partials/pagination" action="/some-action/"/}
      </div>
    </div>

    <div class="bottom">
      <div class="h-content">
        <ul class="grid left">
          {#items group="0"}
            <li class="{@if cond="{$idx} === 0 || ({$idx} % 6 === 0)"} first-child is-promo{/if}">
              {@if cond="{$idx} === 0 || ({$idx} % 6 === 0)"}
                {>"partials/item" hasDescription="true"/}
              {:else}
                {>"partials/item"/}
              {/if}
            </li>

            {@if cond="({$idx} + 1) % 6 == 0"}
              </ul>
              <ul class="grid right">
            {/if}
          {/items}
        </ul>
      </div>
    </div>
  </div>
{/main}
