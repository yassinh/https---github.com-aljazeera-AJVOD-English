<!doctype html>
<!--[if lt IE 7]>      <html lang="{lang}" dir="{dir}" class="is-{dir} no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="{lang}" dir="{dir}" class="is-{dir} no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="{lang}" dir="{dir}" class="is-{dir} no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en" dir="ltr" class="is-ltr no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>{title} - {@eval script="'{lang}'.toUpperCase()"/}</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  {+meta/}
  <script src="scripts/libs/modernizr.js"></script>
  <link rel="dns-prefetch" href="//admin.brightcove.com">
  <link rel="icon" type="image/png" href="images/favicon.png">
  {+styles/}

  <script>
    window.app || (window.app = {
    webroot: "",
    player_id: "2253104569001",
    player_key: "AQ~~,AAAA1Dbg5Jk~,tLPWFvsjaQAfRqZq7vj6WGu5z8kEAJX2"
    });

    window.app.localization = {};
    {@iterate:localization}app.localization['{key|s|j}'] = '{value|s|j}';{~n}{/iterate}
   
  </script>

  {+scripts/}
</head>
<body id="{pageName}">
  <!-- Hidden preload `div` to fetch the sprite before CSS needs it. -->
  <div class="no-display">
    <img src="images/sprite.png" alt="">
    <img src="images/spinner-dark.gif" alt="">
  </div>

  <div id="container">
    {>"partials/header"/}

    {+main}
      default main content
    {/main}

    {@if cond="'{pageName}' != 'home'"}
      {>"partials/footer"/}
    {/if}
  </div>

  <!-- Gigya -->
  <script>
  (function() {
    var s = document.createElement('script');
    s.type = 'text/javascript';
    s.async = true;
    s.src = "http://cdn.gigya.com/js/socialize.js?apikey=3_waYiasagzKS2xBRA-7HpxtSg_T-M2rGRuBiujuHfx_zUVJHDzHw6tm75YMq6PNyS";
    s.text = "{ siteName: 'aljazeera.com (Default site)', enabledProviders: 'facebook,twitter,googleplus,linkedin', lang: '{lang}' }";
    document.getElementsByTagName('head')[0].appendChild(s);
  })();
  </script>
</body>
</html>
