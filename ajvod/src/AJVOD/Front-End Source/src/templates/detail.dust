          <a href="#">Topic 1</a>,
          <a href="#">Topic 2</a>,
          <a href="#">Topic 3</a>,
          <a href="#">Topic 4</a>
        </p>
        <p class="related"><a href="#">Related link to website content</a></p>
        <p class="related"><a href="#">Related link to website content</a></p>
        <p class="related"><a href="#">Related link to website content</a></p>
        <p class="event"><a href="#" data-video-id="1549305523001" class="h-icon h-icon-timeline do-time-machine" title="View historically relevant videos">Event name lorem ipsum</a></p>
      </div>
      <!-- END video panel -->

      <!-- BEGIN share panel -->
      <div class="panel-item" id="panel-sharing">
        <p>Share</p>
        <ul>
          <li><a href="#" class="h-icon-facebook">Facebook</a></li>
          <li><a href="#" class="h-icon-twitter">Twitter</a></li>
          <li><a href="#" class="h-icon-linkedin">LinkedIn</a></li>
          <li><a href="#" class="h-icon-google">Google+</a></li>
        </ul>
      </div>
      <!-- END share panel -->
    </div>
  </div>

  <div id="main">
    {#carousels}
      {! Recommended carousel !}
      {@if cond="{$idx} == 0"}
        {>"partials/carousel" hasLinks="false"/}
      {/if}

      {! Large, 2-col carousel !}
      {@if cond="{$idx} == 1"}
        {>"partials/carousel-large" hasPromo="false"/}
      {/if}

      {! Remaining smaller carousels !}
      {@if cond="{$idx} > 1"}
        {>"partials/carousel"/}
      {/if}
    {/carousels}
  </div>
